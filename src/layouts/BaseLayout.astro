    <style is:global>
      @import "../styles/global.css";
      @import "../styles/home.css";
    </style>
  </head>
  <body>
    <div class="wrapper">
    <Navbar />
    <main>
      
        <slot />
        <!-- your content is injected here -->
      </main>
      <footer class="blur">
        <small>Copyright Â© <span id="copyrightYear"></span> Design</small>
      </footer>
    </div>
    <script>
      document.querySelector('#copyrightYear').textContent = new Date().getFullYear();
    </script>
  </body>
</html>
